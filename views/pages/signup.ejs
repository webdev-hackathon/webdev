<!DOCTYPE html>
<html lang="en">

<head>
<%- include ../partials/head %>
<link rel="stylesheet" href="/components/bootstrap-4.3.1-dist/css/bootstrap-grid.css" >
<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
<link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
    <!-- div maker -->
    <nav  class="nav-bar nav-black">
        <%- include ../partials/header %>
    </nav>
    <main class="wraper-bg">
        <div class="div-outer">
            <div class="container outer-wraper outer-wraper-100vh justify-content-center">
                <div class="row">
                    <div class="col-lg-12 login-wraper">
                        <div class="nb-card login-form">
                            <div class="nb-card-head">
                                <h3>Đăng ký</h3>
                            </div>
                            <div class="nb-card-body">
                                <form action="/users/signup" method="POST">
                                    <input type="text" name="fullname" class="normal-input" placeholder="Họ và Tên" required>
                                    <input type="text" name="email" class="normal-input" placeholder="Email" required>
                                    <input type="text" name="username" class="normal-input" placeholder="tài khoản" required>
                                    <input type="password" name="password" class="normal-input" placeholder="mật khẩu" required>
                                    <input type="password" name="password2" class="normal-input" placeholder="Gõ lại mật khẩu" required>
                                    <input type="submit" value="Đăng ký ngay" />
                                </form>
                            </div>
                            <div class="nb-card-foot">
                                <div>Đã có tài khoản? <a href='login'>Đăng nhập</a></div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </main>

    <!-- Footer  -->

    <footer>
        <%- include ../partials/footer %>
    </footer>

    <!-- Some Scripts -->
    <script src="/components/jquery/dist/jquery.min.js"></script>

    <script src="/js/navigation.js">
    </script>
</body>

</html>